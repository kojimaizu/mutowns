<header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid ps-5 pe-5">
            <a class="navbar-brand" href="/">Mutowns</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <!-- ログイン後のナビバー表示内容の追記 -->
                <% if logged_in? %>
                  
                      <ul class="navbar-nav">
                          <li class="nav-item"><%= link_to "マイページ", users_path(current_user), class: "nav-link" %></li>
                          <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>
                          <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>
                      </ul>
                  
                <% else %>  <!-- ログインしていなければ下記ナビバーとなる -->
                    <ul class="navbar-nav">
                        <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
                    </ul>
                <% end %>    
            </div>
        </div>
    </nav>
</header>